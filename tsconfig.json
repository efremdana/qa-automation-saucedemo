{
  "compilerOptions": {
    // Базовые настройки
    "target": "es2022",
    "module": "esnext",
    "moduleResolution": "bundler", 
    
    // Поддержка Node.js
    "lib": ["es2022", "dom"],
    "types": ["node"],
    
    // Пути
    "rootDir": "./src",
    "outDir": "./dist",
    
    // Строгие проверки (немного ослабляем)
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": false, 
    
    // Модули
    "verbatimModuleSyntax": false, 
    "isolatedModules": true,
    "moduleDetection": "force",
    
    // Совместимость
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,       
    "resolveJsonModule": true,
    "skipLibCheck": true
    
    // Выходные файлы
    // "sourceMap": true,
    // "declaration": true,
    // "declarationMap": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}